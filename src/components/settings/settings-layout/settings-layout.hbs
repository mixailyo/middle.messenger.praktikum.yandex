<div class="settings">
  <button class="settings__back">
    <svg class="settings__back-icon" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 28 28" fill="none">
      <circle cx="14" cy="14" r="14" transform="rotate(-180 14 14)" fill="#3369F3"/>
      <rect x="20" y="14.8" width="11" height="1.6" transform="rotate(-180 20 14.8)" fill="white"/>
      <path d="M13 19L9 14L13 9" stroke="white" stroke-width="1.6"/>
    </svg>
  </button>
  <div class="settings__main">
    {{{changeAvatarModal}}}
    <button class="settings__avatar" onclick="window.changeAvatarModal.showModal()">
      <img src="{{avatar}}" width="130" height="130" alt="аватар пользователя" />
    </button>
    <h3 class="settings__name">{{name}}</h3>
      {{{SettingsForm}}}
      
  </div>
</div>
